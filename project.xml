<?xml version="1.0"?>
<project>
  <pomVersion>3</pomVersion>
  <name>Ordbehandlare.se</name>
  <groupId>optime</groupId>
  <id>repos</id>
  <currentVersion>0.1</currentVersion>
  <package>se.optime.ordbehandlare</package>

  <organization>
    <name>Optime data</name>
    <url>http://www.optime.se/</url>
    <logo>/images/logo.gif</logo>
  </organization>
  <logo>/images/logo_small.gif</logo>
  <inceptionYear>2004</inceptionYear>
  <shortDescription>To-the-point word processor for the web</shortDescription>
  <description>
    Ordbehandlare. Word-processor for writing texts from anywhere.
  </description>

  <url>http://www.ordbehandlare.se/</url>
  <issueTrackingUrl>
    http://www.optime.se/issuetracker/mantis/
  </issueTrackingUrl>
  <siteAddress>www.ordbehandlare.se</siteAddress>
  <siteDirectory>
    /srv/www/htdocs/ordbehandlare/pm
  </siteDirectory>
  <distributionDirectory>
    /srv/www/htdocs/ordbehandlare/pm/dist
  </distributionDirectory>

  <repository>
    <url>
      http://www.optime.se/repos/optime/ordbehandare/
    </url>
  </repository>
	
  <versions>
    <version>
      <id>0.1</id>
      <name>0.1</name>
      <tag>HEAD</tag>
    </version>
  </versions>

  <reports>
    <report>maven-jdepend-plugin</report>
    <report>maven-checkstyle-plugin</report>
    <report>maven-pmd-plugin</report>
    <report>maven-simian-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-changelog-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-developer-activity-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-jxr-plugin</report>
    <report>maven-junit-report-plugin</report>
    <report>maven-tasklist-plugin</report>
    <!--<report>maven-linkcheck-plugin</report>-->
  </reports>

  <developers>

    <developer>
      <name>Staffan Olsson</name>
      <id>solsson</id>
      <email>staffan@optime.se</email>
      <organization>Optime</organization>
    </developer>

  </developers>

  <dependencies>

    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring</artifactId>
      <version>1.1.1</version>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
    <dependency>
      <groupId>acegi-security</groupId>
      <artifactId>acegi-security</artifactId>
      <version>0.6</version>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>
    </dependency>

	<dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.3</version>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.4</version>
    </dependency>

    <dependency>
      <id>log4j</id>
      <version>1.2.8</version>
      <url>http://jakarta.apache.org/log4j/</url>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <dependency>
      <id>commons-logging</id>
      <version>1.0.4</version>
      <url>http://jakarta.apache.org/commons/logging.html</url>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.6.2</version>
    </dependency>
    
    <dependency>
      <groupId>xalan</groupId>
      <artifactId>xalan</artifactId>
      <version>2.6.0</version>
    </dependency>
    
    <dependency>
      <groupId>commons-fileupload</groupId>
      <artifactId>commons-fileupload</artifactId>
      <version>20040706</version>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>	      
    </dependency>

    <dependency>
      <groupId>jstl</groupId>
      <artifactId>jstl</artifactId>
      <version>1.1.1</version>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>
    </dependency>	
	
	<dependency>
      <groupId>taglibs</groupId>
      <artifactId>standard</artifactId>
      <version>1.1.1</version>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
    <!-- DAV -->
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
      <version>2.0.1</version>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>         
    </dependency>
    
    <dependency>
      <groupId>slide</groupId>
      <artifactId>jakarta-slide-webdavlib</artifactId>
      <version>2.1M1</version>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>         
    </dependency>
    
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <properties>
          <war.bundle>true</war.bundle>
      </properties>         
    </dependency>
    
    <dependency>
      <groupId>xml-apis</groupId>
      <artifactId>xml-apis</artifactId>
      <version>1.0.b2</version>
    </dependency>
		
    <!-- for mailer -->
    
    <dependency>
      <groupId>j2ee</groupId>
      <artifactId>mail</artifactId>
      <version>1.3.1</version>
      <properties>
          <war.bundle>false</war.bundle>
      </properties>      
    </dependency>

    <dependency>
      <groupId>j2ee</groupId>
      <artifactId>activation</artifactId>
      <version>1.0.2</version>
      <properties>
          <war.bundle>false</war.bundle>
      </properties>
    </dependency>

  </dependencies>

  <build>

    <nagEmailAddress>
      staffan@optime.se
    </nagEmailAddress>

    <sourceDirectory>src/java</sourceDirectory>

    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

    <aspectSourceDirectory/>

    <!-- Unit test cases -->
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/RepositoryTest.java</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>${pom.build.unitTestSourceDirectory}</directory>
          <includes>
            <include>log4j.xml</include>
            <include>jndi.properties</include>
          </includes>
          <!-- messages_*.properties -->
          <!-- hibernate files -->
        </resource>
      </resources>
    </unitTest>

    <!-- Integration unit test cases -->
    <integrationUnitTest/>

  </build>
</project>
