<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>distributable</id>
    <formats>
        <format>zip</format>
        <!-- <format>tar.gz</format> -->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <!-- local dependencies -->
        <fileSet>
            <directory>lib</directory>
            <outputDirectory>dependencies</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>dependencies</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>