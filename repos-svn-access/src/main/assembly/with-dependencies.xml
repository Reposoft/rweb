<?xml version="1.0" encoding="UTF-8"?>
<!-- makes an "uberjar"
But currently there is a limitation:
 the local libraries in lib/ don't get unpacked.
-->
<assembly>
    <id>with-dependencies</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/classes</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <!-- local dependencies don't work, because they can not be unpacked, but we want the license files -->
        <fileSet>
            <directory>lib</directory>
            <outputDirectory>/</outputDirectory>
			<includes>
				<include>*LICENSE*</include>
			</includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>true</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>