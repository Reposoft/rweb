<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Repos Web - CMS foundation</display-name>
    <servlet>
        <servlet-name>ReposWeb</servlet-name>
        <servlet-class>wicket.protocol.http.WicketServlet</servlet-class>
        <init-param>
          <param-name>applicationClassName</param-name>
          <param-value>se.repos.web.CMS</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
    	<servlet-name>ReposWebBypass</servlet-name>
    	<servlet-class>se.repos.web.bypass.SrcServlet</servlet-class>
    	<load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReposWeb</servlet-name>
        <!-- can't get wicket to return empty Markup for non-html resources -->
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
    <!-- handling non-html resources outside wicket -->
    <servlet-mapping>
        <servlet-name>ReposWebBypass</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>