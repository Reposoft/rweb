#!/bin/sh

echo "Setup testrepo.conf"


echo "Install selenium test framework"
curl "http://localhost/repos/lib/selenium/install.php?go&serv=text"

echo "Update settings to use this server's hostname"
/var/www/admin/switch-hostname.sh /var/www/admin/repos.properties.test

echo "Switch Repos repository to that with test contents"
/var/www/admin/switch-to-testrepo.sh

