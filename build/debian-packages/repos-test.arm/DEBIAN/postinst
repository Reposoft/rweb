#!/bin/sh

WEBAPP="http://localhost/repos"

echo "Setup testrepo.conf"
chown -v www-data /var/www/html/testresults/

echo "Install selenium test framework"
curl "$WEBAPP/lib/selenium/install.php?go&serv=text"

echo "Update settings to use this server's hostname"
/var/www/admin/switch-hostname.sh /var/www/admin/repos.properties.test

echo "Switch Repos repository to that with test contents"
/var/www/admin/switch-to-testrepo.sh

echo "Reset the configuration and the test repository"
curl "$WEBAPP/test/reset/testrepo/?serv=text"

echo "Restart apache to get the fresh testrepo configuration"
/etc/init.d/apache2 reload

echo "Please go to $WEBAPP/conf/ and log in as admin to verify configuration"
