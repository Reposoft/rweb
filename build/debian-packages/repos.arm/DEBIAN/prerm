#!/bin/sh

if [ -f /etc/apache2/sites-enabled/data-repository.conf ]
then 
 rm -v /etc/apache2/sites-enabled/data-repository.conf
fi

echo "Disable the Repos site"
if [ -f /etc/apache2/sites-enabled/httpd-include.conf ]
then
 rm /etc/apache2/sites-enabled/httpd-include.conf
fi
if [ -f /var/www/html/start.html ]
then
 rm /var/www/html/start.html
fi
if [ -f /var/www/html/index.php ]
then
 rm /var/www/html/index.php
fi

echo "Restore the original Bubba start page"
if [ -f /var/www/html/start-default.html ]
then
 if [ ! -f /var/www/html/index.html ]
 then
  mv -v /var/www/html/start-default.html /var/www/html/index.html
 fi
fi

echo "Remove svn client configuration"
rm -Rf /var/www/admin/svn-config-dir

echo "Remove installed libraries"
rm -Rf /var/www/html/repos/lib/*

echo "/var/www/repo, the subversion repository, will not be deleted"
echo "/var/www/backup, the repository backup folder, will not be deleted"

echo "Reload Apache configuration"
/etc/init.d/apache2 reload
